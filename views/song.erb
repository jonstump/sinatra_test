<h2>Song: <%= @song.name %></h2>
<h3>Album: <%= @song.album.name %></h3>
<h3>Song Writer: <%= @song.song_writer %></h3>
<h3>Lyrics: <%= @song.lyrics %></h3>

<form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename song</label>
  <input id="name" name="name" value= "<%= @song.name %>" type="text"><br>
  <label for="writer">Song writer</label>
  <input id="writer" name="writer" value= "<%= @song.writer %>" type="text"><br>
  <label for="lyrics">Lyrics</label>
  <input id="lyrics" name="lyrics" value= "<%= @song.lyrics %>" type="text"><br>
  
  <button type="submit">Update song</button>
</form>

<form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete song</button>
</form>

<a href="/albums/<%= @song.album.id %>">Back to <%= @song.album.name %></a>